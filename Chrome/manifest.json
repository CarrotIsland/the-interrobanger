{
	"manifest_version": 2,
	"name": "The Interrobanger",
	"version": "1.0",
	"description": "Replaces '?!' and '!?' with an interrobang.",
	/*"permissions": [
    "clipboardWrite",
    "clipboardRead"
  ],*/
	"content_scripts": 
	[
		{
			"matches": ["*://*/*"],
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	],
  "browser_action": {
      "default_icon": "icon.png"
      /*"default_popup": "popup.html"*/
  }
}