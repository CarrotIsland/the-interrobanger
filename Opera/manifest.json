{
	"manifest_version": 2,
	"name": "The Interrobanger",
	"version": "1.1",
	"description": "Replaces '?!' and '!?' with an interrobang.",
	"content_scripts": 
	[
		{
			"matches": ["*://*/*"],
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	],
    "permissions": [
    		"http://*/*",
    		"https://*/*"
    ],
    "browser_action": {
      "default_icon": "icon.png"
    },
    "icons":
    {
       "128": "icon.png"
    }
}
